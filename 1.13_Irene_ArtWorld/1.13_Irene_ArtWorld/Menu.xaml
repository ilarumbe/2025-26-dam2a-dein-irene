<Window x:Class="_1._13_Irene_ArtWorld.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menú"
        Width="900" Height="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <FontFamily x:Key="MacondoFont">/Fonts/#Macondo Swash Caps</FontFamily>
        <FontFamily x:Key="MajorMonoFont">/Fonts/#Major Mono Display</FontFamily>

        <Style x:Key="CuadroStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Width" Value="240"/>
            <Setter Property="Height" Value="180"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFEFEFEF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0">
            <TextBlock Text="FAVORITOS"
                       FontFamily="{StaticResource MacondoFont}"
                       FontSize="40"
                       VerticalAlignment="Center"
                       MouseLeftButtonDown="Favoritos_Click"/>
            <Image Source="images/logo.png"
                   Width="65"
                   Height="65"
                   Margin="50,0,50,0"
                   HorizontalAlignment="Center"/>
            <TextBlock Text="AUTORES"
                       FontFamily="{StaticResource MacondoFont}"
                       FontSize="40"
                       Margin="00,0,50,0"
                       VerticalAlignment="Center"
                       MouseLeftButtonDown="Autores_Click"/>
        </StackPanel>

        <Border CornerRadius="25" BorderBrush="Black" BorderThickness="1.5"
                Background="White" Width="270" Height="45"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,100,0,0" Padding="6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="images/lupa.png" Width="30" Height="30"
                       Margin="5,0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtBuscar"
                         Grid.Column="1"
                         BorderThickness="0"
                         FontFamily="{StaticResource MacondoFont}"
                         FontSize="20"
                         Foreground="Gray"
                         VerticalAlignment="Center"
                         TextChanged="TxtBuscar_TextChanged"
                         Text="Search"
                         GotFocus="TxtBuscar_GotFocus"
                         LostFocus="TxtBuscar_LostFocus"/>
            </Grid>
        </Border>
        
        <ScrollViewer Margin="60,170,60,30" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="PanelCuadros">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CuadroStyle}">
                            <StackPanel>
                                <Border BorderBrush="Black" BorderThickness="1">
                                    <Image Source="{Binding Imagen}"
                                           Height="90"
                                           Stretch="UniformToFill"/>
                                </Border>
                                <TextBlock Text="{Binding Nombre}"
                                           FontFamily="{StaticResource MacondoFont}"
                                           FontSize="18"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Foreground="Black"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>

