<Window x:Class="_1._13_Irene_ArtWorld.Error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error"
        Width="600" Height="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <FontFamily x:Key="MacondoFont">/Fonts/#Macondo Swash Caps</FontFamily>

        <Style x:Key="BotonNegro" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource MacondoFont}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Canvas>
            <Image Source="images/error1.png" Width="144" Height="145" Canvas.Left="228" Canvas.Top="78"/>
            <Image Source="images/error2.png" Width="59" Height="58" Canvas.Left="170" Canvas.Top="126"/>
            <Image Source="images/error3.png" Width="75" Height="73" Canvas.Left="350" Canvas.Top="69" RenderTransformOrigin="0.41,0.143"/>
        </Canvas>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Ha ocurrido un error"
                       FontFamily="{StaticResource MacondoFont}"
                       FontSize="28"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,150,0,30"/>
            <Button Content="Volver"
                    Style="{StaticResource BotonNegro}"
                    Click="BtnVolver_Click"/>
        </StackPanel>
    </Grid>
</Window>
