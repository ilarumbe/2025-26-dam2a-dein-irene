<Window x:Class="_1._13_Irene_ArtWorld.CuadroDetalles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalles del Cuadro"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <FontFamily x:Key="MacondoFont">/Fonts/#Macondo Swash Caps</FontFamily>
    </Window.Resources>

    <Grid Margin="30">
        <Button Width="50" Height="50"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                BorderThickness="0"
                Background="Transparent"
                Click="BtnVolver_Click">
            <Image Source="images/flecha_atras.png" Width="40" Height="40"/>
        </Button>

        <TextBlock x:Name="txtNombre"
                   Text="La joven de la perla"
                   FontFamily="{StaticResource MacondoFont}"
                   FontSize="36"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"
                   TextAlignment="Center"/>

        <Border BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,100,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="10">
                    <Image x:Name="imgCuadro" Stretch="UniformToFill"/>
                </Border>

                <TextBlock x:Name="txtDescripcion"
                           Grid.Column="1"
                           FontFamily="{StaticResource MacondoFont}"
                           FontSize="18"
                           TextWrapping="Wrap"
                           Margin="30,10,10,10"
                           Foreground="Black"
                           TextAlignment="Left"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
