<Window x:Class="_1._13_Irene_ArtWorld.Favoritos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Favoritos"
        Width="900" Height="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <FontFamily x:Key="MacondoFont">/Fonts/#Macondo Swash Caps</FontFamily>

        <!-- Estilo para los cuadros -->
        <Style x:Key="CuadroStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="220"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFEFEFEF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Canvas>
            <Image Source="images/estrella.png" Width="50" Height="50" Canvas.Left="78" Canvas.Top="128"/>
            <Image Source="images/estrella.png" Width="62" Height="65" Canvas.Left="750" Canvas.Top="80"/>
            <Image Source="images/estrella.png" Width="35" Height="35" Canvas.Left="150" Canvas.Top="400"/>
            <Image Source="images/estrella.png" Width="55" Height="55" Canvas.Left="50" Canvas.Top="500"/>
            <Image Source="images/estrella.png" Width="40" Height="40" Canvas.Left="817" Canvas.Top="547"/>
            <Image Source="images/estrella.png" Width="65" Height="70" Canvas.Left="792" Canvas.Top="310" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Image Source="images/estrella.png" Width="81" Height="91" Canvas.Left="192" Canvas.Top="11" RenderTransformOrigin="0.309,0.462" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Image Source="images/estrella.png" Width="45" Height="45" Canvas.Left="212" Canvas.Top="212"/>
            <Image Source="images/estrella.png" Width="81" Height="91" Canvas.Left="623" Canvas.Top="21" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Image Source="/images/estrella.png" Width="63" Height="55" Canvas.Left="641" Canvas.Top="433" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Image Source="/images/estrella.png" Width="44" Height="45" Canvas.Left="728" Canvas.Top="212" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Canvas>

        <Grid Height="100" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Button Width="80"
            Height="80"
            BorderThickness="0"
            Background="Transparent"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="BtnVolver_Click"
            Margin="10,0,0,0"
            Grid.Column="0">
                <Image Source="images/flecha_atras.png"
               Width="80"
               Height="80"
               Stretch="Uniform"/>
            </Button>

            <StackPanel Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock Text="FAVORITOS"
                   FontFamily="{StaticResource MacondoFont}"
                   FontSize="60"
                   Foreground="Black"
                   HorizontalAlignment="Center"/>
                <Image Source="images/linea.png"
               Width="300"
               Height="25"
               HorizontalAlignment="Center"
               Margin="0,-5,0,0"/>
            </StackPanel>
        </Grid>

        <ScrollViewer Margin="0,130,0,30" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="PanelFavoritos">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CuadroStyle}"
                                MouseLeftButtonDown="Cuadro_Click">
                            <StackPanel>
                                <Border BorderBrush="Black" BorderThickness="2">
                                    <Image Source="{Binding Imagen}"
                                           Height="140"
                                           Stretch="UniformToFill"/>
                                </Border>
                                <TextBlock Text="{Binding Nombre}"
                                           FontFamily="{StaticResource MacondoFont}"
                                           FontSize="24"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Foreground="Black"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>