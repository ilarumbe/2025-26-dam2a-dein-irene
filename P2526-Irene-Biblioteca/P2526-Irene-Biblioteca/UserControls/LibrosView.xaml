<UserControl x:Class="P2526_Irene_Biblioteca.UserControls.LibrosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>

        <FontFamily x:Key="Font">/Fonts/#Quicksand</FontFamily>

        <Style x:Key="ViewTitle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource Font}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0F4FB5"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="{StaticResource Font}"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderBrush" Value="#D7E6FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Width" Value="240"/>
            <Setter Property="Height" Value="300"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="2" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardTitle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource Font}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <Style x:Key="CardMeta" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource Font}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <Style x:Key="Pill" TargetType="Border">
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Background" Value="#E8F0FE"/>
            <Setter Property="Padding" Value="10,4"/>
        </Style>

        <Style x:Key="PillText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource Font}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#1A73E8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="FormTitle" TargetType="TextBlock" BasedOn="{StaticResource ViewTitle}">
            <Setter Property="Text" Value="Gestión"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.4*"/>
            <ColumnDefinition Width="2.2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Libros" Style="{StaticResource ViewTitle}"/>

            <TextBox Grid.Row="1"
                     Style="{StaticResource SearchBox}"
                     Margin="0,0,0,10"
                     Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"/>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Libros}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardBorder}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border CornerRadius="14" Background="#F3F6FB" ClipToBounds="True">
                                        <Image Stretch="UniformToFill"
                                               Source="pack://application:,,,/Images/libro.jpg"/>
                                    </Border>

                                    <TextBlock Grid.Row="1" Text="{Binding Titulo}" Style="{StaticResource CardTitle}" Margin="0,10,0,0"/>
                                    <TextBlock Grid.Row="2" Text="{Binding AutorNombre}" Style="{StaticResource CardMeta}" Margin="0,4,0,0"/>

                                    <StackPanel Grid.Row="3" Margin="0,10,0,0">
                                        <TextBlock Text="{Binding CategoriaNombre}" Style="{StaticResource CardMeta}"/>
                                        <TextBlock Text="{Binding Año, StringFormat=Año: {0}}" Style="{StaticResource CardMeta}" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Row="4" Style="{StaticResource Pill}" HorizontalAlignment="Left">
                                        <TextBlock Style="{StaticResource PillText}"
                                                   Text="{Binding Stock, StringFormat=Stock: {0}}"/>
                                    </Border>

                                    <Button Grid.Row="5"
                                            Content="Seleccionar"
                                            Style="{StaticResource GhostBtn}"
                                            HorizontalAlignment="Right"
                                            Margin="0,10,0,0"
                                            Click="LibroSelect_Click"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Border Grid.Column="1" Background="White" CornerRadius="18" Padding="18" Margin="6">
            <StackPanel>
                <TextBlock Style="{StaticResource FormTitle}"/>

                <TextBlock Text="Título" Style="{StaticResource Label}"/>
                <TextBox Style="{StaticResource Input}"
                         Text="{Binding Titulo, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding PuedeEditar}"/>

                <TextBlock Text="Año" Style="{StaticResource Label}"/>
                <TextBox Style="{StaticResource Input}"
                         Text="{Binding Anio, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding PuedeEditar}"/>

                <TextBlock Text="Autor" Style="{StaticResource Label}"/>
                <ComboBox Style="{StaticResource Combo}"
                          ItemsSource="{Binding Autores}"
                          DisplayMemberPath="Nombre"
                          SelectedValuePath="IdAutor"
                          SelectedValue="{Binding AutorId}"
                          IsEnabled="{Binding PuedeEditar}"/>

                <TextBlock Text="Categoría" Style="{StaticResource Label}"/>
                <ComboBox Style="{StaticResource Combo}"
                          ItemsSource="{Binding Categorias}"
                          DisplayMemberPath="Nombre"
                          SelectedValuePath="IdCategoria"
                          SelectedValue="{Binding CategoriaId}"
                          IsEnabled="{Binding PuedeEditar}"/>

                <TextBlock Text="Stock" Style="{StaticResource Label}"/>
                <TextBox Style="{StaticResource Input}"
                         Text="{Binding Stock, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding PuedeEditar}"/>

                <TextBlock Text="{Binding Mensaje}"
                           Foreground="#DC2626"
                           Margin="0,10,0,0"
                           FontFamily="{StaticResource Font}"/>

                <WrapPanel HorizontalAlignment="Center" Margin="0,16,0,0">
                    <Button Content="Añadir" Style="{StaticResource PrimaryBtn}" Click="BtnAdd_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Eliminar" Style="{StaticResource DangerBtn}" Margin="10,0,0,0" Click="BtnDelete_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Modificar" Style="{StaticResource GhostBtn}" Margin="10,0,0,0" Click="BtnUpdate_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Limpiar" Style="{StaticResource GhostBtn}" Margin="10,0,0,0" Click="BtnClear_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
