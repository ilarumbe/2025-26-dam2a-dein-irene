<UserControl x:Class="P2526_Irene_Biblioteca.UserControls.CategoriasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Border Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Categorías" Style="{StaticResource H1}"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Categorias}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="999" Background="#E8F0FE" Margin="8" Padding="12,8">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Nombre}"
                                                   FontFamily="{StaticResource AppFont}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource BrushBlueDark}" />

                                        <Button Content="✎"
                                                Width="34" Height="30"
                                                Margin="10,0,0,0"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Foreground="{StaticResource BrushBlueDark}"
                                                Click="CategoriaSelect_Click"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource Card}" Margin="12,0,0,0">
            <StackPanel>
                <TextBlock Text="Editar categoría" Style="{StaticResource H1}" FontSize="18" Margin="0,0,0,6"/>

                <TextBlock Text="Nombre" Style="{StaticResource Label}"/>
                <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource Input}"
                         IsEnabled="{Binding PuedeEditar}"/>

                <TextBlock Text="{Binding ErrorText}"
                           Foreground="#DC2626"
                           Margin="0,10,0,0"
                           FontFamily="{StaticResource AppFont}"/>

                <WrapPanel HorizontalAlignment="Right" Margin="0,14,0,0">
                    <Button Content="Añadir" Style="{StaticResource PrimaryBtn}" Click="BtnAdd_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Modificar" Style="{StaticResource GhostBtn}" Margin="10,0,0,0" Click="BtnUpdate_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Eliminar" Style="{StaticResource GhostBtn}" Margin="10,0,0,0" Click="BtnDelete_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Limpiar" Style="{StaticResource GhostBtn}" Margin="10,0,0,0" Click="BtnClear_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
