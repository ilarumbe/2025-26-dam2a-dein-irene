<UserControl x:Class="P2526_Irene_Biblioteca.UserControls.CategoriasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Focusable="True"
             Loaded="UserControl_Loaded"
             PreviewKeyDown="UserControl_PreviewKeyDown">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Border Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Categorías" Style="{StaticResource H1}"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Categorias}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Click="CategoriaSelect_Click"
                                        Width="160"
                                        Height="160"
                                        Margin="10"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand">

                                    <Border Background="#E8F0FE"
                                            CornerRadius="18"
                                            Padding="14">

                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="14"
                                      ShadowDepth="2"
                                      Opacity="0.12"/>
                                        </Border.Effect>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="🏷"
                               FontSize="26"
                               Foreground="{StaticResource BrushBlueDark}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" Cursor=""/>

                                            <TextBlock Grid.Row="1"
                               Text="{Binding Nombre}"
                               FontFamily="{StaticResource AppFont}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BrushBlueDark}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,10,0,0"/>
                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource Card}" Margin="12,0,0,0">
            <StackPanel>
                <TextBlock Text="Editar categoría" Style="{StaticResource H1}" FontSize="18" Margin="0,0,0,6"/>

                <TextBlock Text="Nombre" Style="{StaticResource Label}"/>
                <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource Input}"
                         IsEnabled="{Binding PuedeEditar}"/>

                <TextBlock Text="{Binding Mensaje}"
                           Foreground="#DC2626"
                           Margin="0,10,0,0"
                           FontFamily="{StaticResource AppFont}"/>

                <WrapPanel HorizontalAlignment="Center" Margin="0,14,0,0">
                    <Button Content="Añadir" Style="{StaticResource PrimaryBtn}" Click="BtnAdd_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Eliminar" Style="{StaticResource DangerBtn}" Margin="10,0,0,0" Click="BtnDelete_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Modificar" Style="{StaticResource GhostBtn}" Margin="10,0,0,0" Click="BtnUpdate_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Limpiar" Style="{StaticResource GhostBtn}" Margin="10,0,0,0" Click="BtnClear_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
