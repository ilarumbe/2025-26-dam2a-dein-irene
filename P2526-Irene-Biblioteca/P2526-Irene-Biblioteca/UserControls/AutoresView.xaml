<UserControl x:Class="P2526_Irene_Biblioteca.UserControls.AutoresView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Autores" Style="{StaticResource H1}"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Autores}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="16"
                                        Background="#F7FAFF"
                                        Padding="14"
                                        Margin="10"
                                        Width="260">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="56"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Width="46"
                                                Height="46"
                                                CornerRadius="999"
                                                Background="#E8F0FE"
                                                VerticalAlignment="Top">

                                        </Border>

                                        <StackPanel Grid.Column="1"
                                                    Margin="12,0,0,0"
                                                    VerticalAlignment="Center">

                                            <TextBlock Text="{Binding Nombre}"
                                                       FontFamily="{StaticResource AppFont}"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="#111827"/>

                                            <TextBlock Text="{Binding Nacionalidad}"
                                                       FontFamily="{StaticResource AppFont}"
                                                       FontSize="13"
                                                       Foreground="#6B7280"
                                                       Margin="0,4,0,0"/>

                                            <Button Content="Seleccionar"
                                                    Style="{StaticResource GhostBtn}"
                                                    HorizontalAlignment="Right"
                                                    Margin="0,12,0,0"
                                                    Click="AutorSelect_Click"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>


                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.2*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Gestión" Style="{StaticResource H1}" FontSize="18" Margin="0,0,0,6"/>

                    <TextBlock Text="Nombre" Style="{StaticResource Label}"/>
                    <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource Input}"
                             IsEnabled="{Binding PuedeEditar}" TextChanged="TextBox_TextChanged"/>

                    <TextBlock Text="Nacionalidad" Style="{StaticResource Label}"/>
                    <TextBox Text="{Binding Nacionalidad, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource Input}"
                             IsEnabled="{Binding PuedeEditar}"/>

                    <TextBlock Text="{Binding Mensaje}"
                               Foreground="#DC2626"
                               Margin="0,10,0,0"
                               FontFamily="{StaticResource AppFont}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Button Content="Añadir" Style="{StaticResource PrimaryBtn}" Click="BtnAdd_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Modificar" Style="{StaticResource GhostBtn}" Margin="0,10,0,0" Click="BtnUpdate_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Eliminar" Style="{StaticResource GhostBtn}" Margin="0,10,0,0" Click="BtnDelete_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Limpiar" Style="{StaticResource GhostBtn}" Margin="0,10,0,0" Click="BtnClear_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
