<UserControl x:Class="P2526_Irene_Biblioteca.UserControls.AutoresView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Autores" Style="{StaticResource H1}"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="AutoresCards">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="16" Background="#F7FAFF" Padding="14" Margin="10" Width="260">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Width="42" Height="42" CornerRadius="999"
                                                Background="{StaticResource BrushTeal}" VerticalAlignment="Top">
                                            <TextBlock Text="{Binding Nombre, StringFormat={}{0:0}}"
                                                       Foreground="White" FontWeight="Bold"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <TextBlock Grid.Column="1" Text="{Binding Nombre}"
                                                   FontFamily="{StaticResource AppFont}"
                                                   FontSize="16" FontWeight="Bold" Foreground="#111827"/>

                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Nacionalidad}"
                                                   FontFamily="{StaticResource AppFont}" Foreground="#6B7280" Margin="0,4,0,0"/>

                                        <Button Grid.Row="2" Grid.Column="1" Content="Seleccionar"
                                                Style="{StaticResource GhostBtn}" HorizontalAlignment="Right" Margin="0,12,0,0"
                                                Click="AutorSelect_Click"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.2*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Gestión" Style="{StaticResource H1}" FontSize="18" Margin="0,0,0,6"/>
                    <TextBlock Text="Nombre" Style="{StaticResource Label}"/>
                    <TextBox x:Name="NombreTextBox" Style="{StaticResource Input}"/>

                    <TextBlock Text="Nacionalidad" Style="{StaticResource Label}"/>
                    <TextBox x:Name="NacionalidadTextBox" Style="{StaticResource Input}"/>

                    <TextBlock x:Name="ErrorText" Foreground="#DC2626" Margin="0,10,0,0" FontFamily="{StaticResource AppFont}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <Button Content="Añadir" Style="{StaticResource PrimaryBtn}" Click="BtnAdd_Click"/>
                    <Button Content="Modificar" Style="{StaticResource GhostBtn}" Margin="0,10,0,0" Click="BtnUpdate_Click"/>
                    <Button Content="Eliminar" Style="{StaticResource GhostBtn}" Margin="0,10,0,0" Click="BtnDelete_Click"/>
                    <Button Content="Limpiar" Style="{StaticResource GhostBtn}" Margin="0,10,0,0" Click="BtnClear_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid x:Name="AutoresGrid" Visibility="Collapsed"/>
    </Grid>
</UserControl>
