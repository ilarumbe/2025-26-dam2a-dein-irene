<UserControl x:Class="P2526_Irene_Biblioteca.UserControls.PrestamosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1A73E8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Background" Value="#1A73E8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="3.5*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Préstamos" Style="{StaticResource TitleStyle}"/>

            <DataGrid x:Name="PrestamosGrid"
                      AutoGenerateColumns="False"
                      Height="350"
                      SelectionChanged="PrestamosGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding IdPrestamo}" Width="60"/>
                    <DataGridTextColumn Header="Libro" Binding="{Binding IdLibro}" Width="70"/>
                    <DataGridTextColumn Header="Cliente" Binding="{Binding IdCliente}" Width="70"/>
                    <DataGridTextColumn Header="Empleado" Binding="{Binding IdEmpleado}" Width="80"/>
                    <DataGridTextColumn Header="F. Préstamo" Binding="{Binding FechaPrestamo}" Width="120"/>
                    <DataGridTextColumn Header="F. Devolución" Binding="{Binding FechaDevolucion}" Width="120"/>
                    <DataGridCheckBoxColumn Header="Devuelto" Binding="{Binding Devuelto}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <Border Grid.Column="1"
                Margin="20,0,0,0"
                Padding="20"
                Background="#F7F9FC"
                CornerRadius="12">
            <StackPanel>
                <TextBlock Text="Gestión" Style="{StaticResource TitleStyle}"/>

                <TextBlock Text="Libro" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="LibrosCombo"
                          DisplayMemberPath="Titulo"
                          SelectedValuePath="IdLibro"
                          Height="32"/>

                <TextBlock Text="Cliente" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="ClientesCombo"
                          DisplayMemberPath="Nombre"
                          SelectedValuePath="IdCliente"
                          Height="32"/>

                <TextBlock Text="Empleado" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="EmpleadosCombo"
                          DisplayMemberPath="Nombre"
                          SelectedValuePath="IdEmpleado"
                          Height="32"/>

                <TextBlock Text="Fecha préstamo" Style="{StaticResource LabelStyle}"/>
                <DatePicker x:Name="FechaPrestamoPicker" Height="32"/>

                <TextBlock Text="Fecha devolución (opcional)" Style="{StaticResource LabelStyle}"/>
                <DatePicker x:Name="FechaDevolucionPicker" Height="32"/>

                <CheckBox x:Name="DevueltoCheck" Content="Devuelto" Margin="0,10,0,0"/>

                <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0,10,0,0"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Añadir" Style="{StaticResource PrimaryButtonStyle}" Click="BtnAdd_Click"/>
                    <Button Content="Modificar" Style="{StaticResource SecondaryButtonStyle}" Margin="10,0,0,0" Click="BtnUpdate_Click"/>
                    <Button Content="Eliminar" Style="{StaticResource SecondaryButtonStyle}" Margin="10,0,0,0" Click="BtnDelete_Click"/>
                    <Button Content="Limpiar" Style="{StaticResource SecondaryButtonStyle}" Margin="10,0,0,0" Click="BtnClear_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
