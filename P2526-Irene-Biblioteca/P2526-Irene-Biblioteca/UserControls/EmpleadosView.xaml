<UserControl x:Class="P2526_Irene_Biblioteca.UserControls.EmpleadosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*"/>
            <ColumnDefinition Width="2.8*"/>
        </Grid.ColumnDefinitions>

        <Border Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Empleados" Style="{StaticResource H1}"/>

                <ListBox Grid.Row="1"
                         Margin="0,10,0,0"
                         ItemsSource="{Binding Empleados}"
                         SelectedItem="{Binding EmpleadoSeleccionado}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="14" Background="#F7FAFF" Padding="12" Margin="0,6">
                                <StackPanel>
                                    <TextBlock Text="{Binding Nombre}"
                                               FontFamily="{StaticResource AppFont}"
                                               FontWeight="Bold"
                                               Foreground="#111827"/>
                                    <TextBlock Text="{Binding Usuario}"
                                               FontFamily="{StaticResource AppFont}"
                                               Foreground="#6B7280"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource Card}" Margin="12,0,0,0">
            <StackPanel>
                <TextBlock Text="Gestión de empleados" Style="{StaticResource H1}" FontSize="18"/>

                <TextBlock Text="Nombre" Style="{StaticResource Label}"/>
                <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource Input}"
                         IsEnabled="{Binding PuedeEditar}"/>

                <TextBlock Text="Usuario" Style="{StaticResource Label}"/>
                <TextBox Text="{Binding Usuario, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource Input}"
                         IsEnabled="{Binding PuedeEditar}"/>

                <TextBlock Text="Contraseña (solo si quieres cambiarla)" Style="{StaticResource Label}"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="38"
                             Padding="10,0"
                             IsEnabled="{Binding PuedeEditar}"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="{Binding ErrorText}"
                           Foreground="#DC2626"
                           Margin="0,10,0,0"
                           FontFamily="{StaticResource AppFont}"/>

                <WrapPanel HorizontalAlignment="Right" Margin="0,14,0,0">
                    <Button Content="Añadir" Style="{StaticResource PrimaryBtn}" Click="BtnAdd_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Modificar" Style="{StaticResource GhostBtn}" Margin="10,0,0,0" Click="BtnUpdate_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Eliminar" Style="{StaticResource GhostBtn}" Margin="10,0,0,0" Click="BtnDelete_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Limpiar" Style="{StaticResource GhostBtn}" Margin="10,0,0,0" Click="BtnClear_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
