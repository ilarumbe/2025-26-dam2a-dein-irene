<UserControl x:Class="P2526_Irene_Biblioteca.UserControls.ClientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Border Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Clientes" Style="{StaticResource H1}" Margin="0,0,12,0"/>
                    <Border CornerRadius="999" Background="#E8F0FE" Padding="10,4" VerticalAlignment="Center">
                        <TextBlock Text="Tip: selecciona un cliente para editar"
                                   FontFamily="{StaticResource AppFont}"
                                   Foreground="{StaticResource BrushBlueDark}"
                                   FontSize="12"/>
                    </Border>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Clientes}"
                          SelectedItem="{Binding ClienteSeleccionado}"
                          AutoGenerateColumns="False"
                          Margin="0,10,0,0"
                          HeadersVisibility="Column"
                          RowHeight="36">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding IdCliente}" Width="70"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Usuario" Binding="{Binding Usuario}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource Card}" Margin="12,0,0,0" Background="#F7FAFF">
            <StackPanel>
                <TextBlock Text="Panel de edición" Style="{StaticResource H1}" FontSize="18"/>

                <TextBlock Text="Nombre" Style="{StaticResource Label}"/>
                <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource Input}"
                         IsEnabled="{Binding PuedeEditar}"/>

                <TextBlock Text="Usuario" Style="{StaticResource Label}"/>
                <TextBox Text="{Binding Usuario, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource Input}"
                         IsEnabled="{Binding PuedeEditar}"/>

                <TextBlock Text="Contraseña (solo si quieres cambiarla)" Style="{StaticResource Label}"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="38"
                             Padding="10,0"
                             IsEnabled="{Binding PuedeEditar}"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="{Binding ErrorText}"
                           Foreground="#DC2626"
                           Margin="0,10,0,0"
                           FontFamily="{StaticResource AppFont}"/>

                <WrapPanel HorizontalAlignment="Right" Margin="0,14,0,0">
                    <Button Content="Añadir" Style="{StaticResource PrimaryBtn}" Click="BtnAdd_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Modificar" Style="{StaticResource GhostBtn}" Margin="10,0,0,0" Click="BtnUpdate_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Eliminar" Style="{StaticResource GhostBtn}" Margin="10,0,0,0" Click="BtnDelete_Click"
                            IsEnabled="{Binding PuedeEditar}"/>
                    <Button Content="Limpiar" Style="{StaticResource GhostBtn}" Margin="10,0,0,0" Click="BtnClear_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
