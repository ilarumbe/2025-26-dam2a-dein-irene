<Window x:Class="P2526_Irene_Biblioteca.Views.InformesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Informes"
        Width="420"
        Height="420"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Centro de informes"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <UniformGrid Grid.Row="1" Columns="1" Rows="6" VerticalAlignment="Top">

            <Button Content="📄 Autores" Height="42" Margin="0,6"
                    Click="Autores_Click"/>

            <Button Content="📄 Categorías" Height="42" Margin="0,6"
                    Click="Categorias_Click"/>

            <Button Content="📄 Clientes" Height="42" Margin="0,6"
                    Click="Clientes_Click"/>

            <Button Content="📄 Empleados" Height="42" Margin="0,6"
                    Click="Empleados_Click"/>

            <Button Content="📄 Libros" Height="42" Margin="0,6"
                    Click="Libros_Click"/>

            <Button Content="📊 Préstamos" Height="42" Margin="0,6"
                    Click="Prestamos_Click"/>
        </UniformGrid>
    </Grid>
</Window>
