<Window x:Class="P2526_Irene_Biblioteca.Views.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Biblioteca"
        Width="1100" Height="650"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="12" Background="#FFFFFF" Padding="0" >
        <Grid>
            <Border Background="Transparent">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      ShadowDepth="0"
                                      Opacity="0.4"/>
                </Border.Effect>
            </Border>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#1A73E8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                            <TextBlock Text="📚"
                                       FontSize="20" Margin="0,0,10,0"
                                       Foreground="White"/>
                            <TextBlock Text="Biblioteca"
                                       FontSize="18" 
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">

                            <Button Width="50" Height="40"
                                    Background="Transparent" BorderThickness="0"
                                    Command="{Binding CloseCommand}">
                                <TextBlock Text="✕" FontSize="16" Foreground="White"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Background="#F3F6FB" Grid.Column="0">
                        <StackPanel Margin="20">

                            <TextBlock Text="Menú"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Margin="0,0,0,20"/>

                            <Button Style="{StaticResource MenuButtonStyle}"
                                    Content="🏷 Autores"
                                    Command="{Binding ShowAutoresCommand}"/>

                            <Button Style="{StaticResource MenuButtonStyle}"
                                    Content="📚 Libros"
                                    Command="{Binding ShowLibrosCommand}"/>

                            <Button Style="{StaticResource MenuButtonStyle}"
                                    Content="🗂 Categorías"
                                    Command="{Binding ShowCategoriasCommand}"/>

                            <Button Style="{StaticResource MenuButtonStyle}"
                                    Content="👥 Clientes"
                                    Command="{Binding ShowClientesCommand}"/>

                            <Button Style="{StaticResource MenuButtonStyle}"
                                    Content="🧑 Empleados"
                                    Command="{Binding ShowEmpleadosCommand}"/>

                            <Button Style="{StaticResource MenuButtonStyle}"
                                    Content="📖 Préstamos"
                                    Command="{Binding ShowPrestamosCommand}"/>

                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="White">
                        <ContentControl Content="{Binding CurrentView}"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>