<Window x:Class="P2526_Irene_Biblioteca.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesión"
        WindowStartupLocation="CenterScreen"
        Width="400" Height="600">


    <Window.Resources>

        <Style x:Key="LoginBaseTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="/Fonts/#Quicksand"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style x:Key="LoginTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource LoginBaseTextStyle}">
            <Setter Property="Text" Value="Iniciar Sesión"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1A73E8"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="LoginLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource LoginBaseTextStyle}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="LoginErrorStyle" TargetType="TextBlock" BasedOn="{StaticResource LoginBaseTextStyle}">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="LoginTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontFamily" Value="/Fonts/#Quicksand"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
        </Style>

        <Style x:Key="LoginPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="FontFamily" Value="/Fonts/#Quicksand"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="/Fonts/#Quicksand"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#1A73E8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LoginLogoStyle" TargetType="Image">
            <Setter Property="Source" Value="/Images/biblioteca.png"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="LoginCloseButtonStyle" TargetType="Button">
            <Setter Property="Content" Value="✕"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#999"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <Style x:Key="LoginCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
        </Style>

    </Window.Resources>

    <Border Style="{StaticResource LoginCardStyle}">
        <Grid>

            <StackPanel VerticalAlignment="Center" Margin="0,10,0,0">

                <Image Style="{StaticResource LoginLogoStyle}"/>

                <TextBlock Style="{StaticResource LoginTitleStyle}"/>

                <TextBlock Text="Usuario" Style="{StaticResource LoginLabelStyle}"/>
                <TextBox Text="{Binding Usuario}" Style="{StaticResource LoginTextBoxStyle}"/>

                <TextBlock Text="Contraseña" Style="{StaticResource LoginLabelStyle}"/>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource LoginPasswordBoxStyle}"
                             PasswordChanged="PasswordChanged"/>

                <TextBlock Text="{Binding MensajeError}" Style="{StaticResource LoginErrorStyle}"/>

                <Button Content="Entrar"
                        Style="{StaticResource LoginButtonStyle}"
                        Command="{Binding LoginCommand}"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>

