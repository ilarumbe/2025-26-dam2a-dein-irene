<Window x:Class="P2526_Irene_Biblioteca.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesión"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#0B1220">

    <Window.Resources>

        <FontFamily x:Key="LoginFont">/Fonts/#Quicksand</FontFamily>

        <Color x:Key="Blue">#1A73E8</Color>
        <Color x:Key="Teal">#22C1C3</Color>

        <SolidColorBrush x:Key="BrushBlue" Color="{StaticResource Blue}"/>
        <SolidColorBrush x:Key="BrushTeal" Color="{StaticResource Teal}"/>

        <Style x:Key="LoginLogoStyle" TargetType="Image">
            <Setter Property="Source" Value="/Images/biblioteca.png"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
        </Style>
        
        <Style x:Key="LoginTitle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource LoginFont}"/>
            <Setter Property="FontSize" Value="34"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#017AFE"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
        </Style>

        <Style x:Key="LoginLabel" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource LoginFont}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,10,0,6"/>
        </Style>

        <Style x:Key="LoginTextBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="{StaticResource LoginFont}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D7E6FF"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="LoginPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontFamily" Value="{StaticResource LoginFont}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D7E6FF"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource LoginFont}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="46"/>
            <Setter Property="Background" Value="{StaticResource BrushBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="14" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0F4FB5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LoginCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="22"/>
            <Setter Property="Padding" Value="34"/>
            <Setter Property="Width" Value="420"/>
        </Style>

        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource LoginFont}"/>
            <Setter Property="Foreground" Value="#DC2626"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
        </Style>

        <Style x:Key="CloseBtn" TargetType="Button">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#22FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0B1220" Offset="0"/>
                <GradientStop Color="#0F4FB5" Offset="0.55"/>
                <GradientStop Color="#22C1C3" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Button Style="{StaticResource CloseBtn}"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="18"
        Click="Close_Click">
            <TextBlock Text="✕" Foreground="White" FontSize="16"/>
        </Button>


        <Border Style="{StaticResource LoginCard}" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>

                <Image Style="{StaticResource LoginLogoStyle}"/>

                <TextBlock Text="Iniciar sesión" Style="{StaticResource LoginTitle}"/>

                <TextBlock Text="Usuario" Style="{StaticResource LoginLabel}"/>
                <TextBox Text="{Binding Usuario}" Style="{StaticResource LoginTextBox}"/>

                <TextBlock Text="Contraseña" Style="{StaticResource LoginLabel}"/>
                <PasswordBox x:Name="PasswordBox"
                     Style="{StaticResource LoginPasswordBox}"
                     PasswordChanged="PasswordChanged"/>

                <TextBlock Text="{Binding MensajeError}" Style="{StaticResource ErrorTextStyle}"/>

                <Button Content="Entrar"
                        Style="{StaticResource PrimaryButton}"
                        Click="Entrar_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
