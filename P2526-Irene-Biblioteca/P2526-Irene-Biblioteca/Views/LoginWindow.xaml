<Window x:Class="P2526_Irene_Biblioteca.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesión"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="400" Height="500">

    <Border Background="White" CornerRadius="16" Padding="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>

        <Grid>

            <StackPanel VerticalAlignment="Center">

                <Image Source="/Images/biblioteca.png"
                       Width="120"
                       Height="120"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

                <TextBlock Text="Iniciar Sesión"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#1A73E8"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Usuario" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Usuario}" />

                <TextBlock Text="Contraseña" Margin="0,10,0,0" FontWeight="SemiBold"/>
                <PasswordBox x:Name="PasswordBox"
                             Margin="5"
                             PasswordChanged="PasswordChanged"/>

                <TextBlock Text="{Binding MensajeError}"
                           Foreground="Red"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,10"/>

                <Button Content="Entrar" Width="120" 
                        HorizontalAlignment="Center"
                        Command="{Binding LoginCommand}"/>

                <Button Content="✕" 
                        Width="35" Height="35"
                        Background="Transparent"
                        Foreground="#999"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,-60,-15,0"
                        Command="{Binding CloseCommand}"/>

            </StackPanel>

        </Grid>
    </Border>
</Window>

