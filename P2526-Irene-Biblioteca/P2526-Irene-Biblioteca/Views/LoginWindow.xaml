<Window x:Class="P2526_Irene_Biblioteca.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesión"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="400" Height="500">

    <Border Background="White" CornerRadius="16" Padding="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>

        <Grid>

            <StackPanel VerticalAlignment="Center">

                <Image Source="/Images/biblioteca.png"
                       Width="120"
                       Height="120"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

                <TextBlock Text="Iniciar Sesión"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#1A73E8"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Usuario"/>
                <TextBox Text="{Binding Usuario}"
                     Margin="0,5,0,15" 
                     Height="30"/>

                <TextBlock Text="Contraseña"/>
                <PasswordBox x:Name="PasswordBox"
                         PasswordChanged="PasswordChanged"
                         Margin="0,5,0,20" 
                         Height="30"/>

                <TextBlock Text="{Binding MensajeError}"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

                <Button Content="Entrar"
                    Width="120"
                    HorizontalAlignment="Center"
                    Command="{Binding LoginCommand}" 
                    Height="30"/>

                <Button Content="✕" 
                        Width="35" Height="35"
                        Background="Transparent"
                        Foreground="#999"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,-60,-15,0"
                        Command="{Binding CloseCommand}"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>

