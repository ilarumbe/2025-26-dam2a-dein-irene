<Window x:Class="P2526_Irene_Biblioteca.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        Title="Informe"
        Width="1100"
        Height="750"
        WindowStartupLocation="CenterScreen"
        Background="#F7FAFF">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,10">
            <TextBlock x:Name="TitleText"
                       Text="Informe"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#0F4FB5"
                       VerticalAlignment="Center"/>

            <Button Content="Cerrar"
                    DockPanel.Dock="Right"
                    Width="120"
                    Height="34"
                    HorizontalAlignment="Right"
                    Click="Close_Click"/>
        </DockPanel>

        <Border Grid.Row="1" CornerRadius="12" Background="White" BorderBrush="#D7E6FF" BorderThickness="1">
            <wfi:WindowsFormsHost x:Name="FormsHost"/>
        </Border>
    </Grid>
</Window>
