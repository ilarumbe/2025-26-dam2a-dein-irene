<Window x:Class="P2526_Irene_Biblioteca.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ayuda"
        Width="900"
        Height="650"
        WindowStartupLocation="CenterScreen"
        Background="#F7FAFF">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="16" Background="#121B2C" Padding="14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock x:Name="TitleText"
                               Text="Ayuda"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"/>
                    <TextBlock x:Name="SubTitleText"
                               Text="Información de uso"
                               Foreground="#BFD8FF"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Width="44"
                        Height="38"
                        Background="#22FFFFFF"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Close_Click">
                    <TextBlock Text="✕" Foreground="White" FontSize="16"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Grid>
        </Border>

        <Border Grid.Row="1" CornerRadius="16" Background="White" Padding="14" Margin="0,14,0,14">
            <TabControl>
                <TabItem Header="Pantalla actual">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <TextBlock Text="Qué puedes hacer aquí"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#0F4FB5"
                                       Margin="0,0,0,10"/>

                            <TextBlock x:Name="ContextHelpText"
                                       TextWrapping="Wrap"
                                       FontSize="14"
                                       Foreground="#1F2937"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Atajos de teclado">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <TextBlock Text="Atajos disponibles"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#0F4FB5"
                                       Margin="0,0,0,10"/>

                            <Border CornerRadius="12" Background="#F7FAFF" Padding="12" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="F1" FontWeight="Bold"/>
                                    <TextBlock Text="Abrir esta ayuda" Foreground="#6B7280"/>
                                </StackPanel>
                            </Border>

                            <Border CornerRadius="12" Background="#F7FAFF" Padding="12" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Ctrl + S" FontWeight="Bold"/>
                                    <TextBlock Text="Añadir / Guardar" Foreground="#6B7280"/>
                                </StackPanel>
                            </Border>

                            <Border CornerRadius="12" Background="#F7FAFF" Padding="12" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Ctrl + U" FontWeight="Bold"/>
                                    <TextBlock Text="Modificar" Foreground="#6B7280"/>
                                </StackPanel>
                            </Border>

                            <Border CornerRadius="12" Background="#F7FAFF" Padding="12" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Ctrl + D" FontWeight="Bold"/>
                                    <TextBlock Text="Eliminar" Foreground="#6B7280"/>
                                </StackPanel>
                            </Border>

                            <Border CornerRadius="12" Background="#F7FAFF" Padding="12">
                                <StackPanel>
                                    <TextBlock Text="Esc" FontWeight="Bold"/>
                                    <TextBlock Text="Limpiar / Cancelar" Foreground="#6B7280"/>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="Notas"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#0F4FB5"
                                       Margin="0,18,0,10"/>

                            <TextBlock Text="Si un botón está deshabilitado, no tienes permisos o no hay un elemento seleccionado."
                                       TextWrapping="Wrap"
                                       Foreground="#1F2937"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Permisos">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <TextBlock Text="Rol actual"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#0F4FB5"
                                       Margin="0,0,0,10"/>

                            <TextBlock x:Name="RoleText"
                                       FontSize="14"
                                       Foreground="#1F2937"
                                       Margin="0,0,0,16"/>

                            <TextBlock Text="Comportamiento"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#0F4FB5"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Empleado: acceso completo a gestión."
                                       Foreground="#1F2937"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="Cliente: solo puede gestionar sus propios préstamos."
                                       Foreground="#1F2937"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Consejos">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <TextBlock Text="Consejos de uso"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#0F4FB5"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="1) Selecciona un elemento del listado para editarlo."
                                       Margin="0,0,0,8"
                                       Foreground="#1F2937"/>
                            <TextBlock Text="2) Para crear uno nuevo, limpia el formulario y rellena los campos."
                                       Margin="0,0,0,8"
                                       Foreground="#1F2937"/>
                            <TextBlock Text="3) Usa los ComboBox y DatePickers para evitar errores de formato."
                                       Margin="0,0,0,8"
                                       Foreground="#1F2937"/>
                            <TextBlock Text="4) Antes de eliminar, revisa que sea el elemento correcto."
                                       Foreground="#1F2937"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="160" Height="38" Background="#1A73E8" Foreground="White"
                    BorderThickness="0" Cursor="Hand" Click="Close_Click">
                <TextBlock Text="Cerrar" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
