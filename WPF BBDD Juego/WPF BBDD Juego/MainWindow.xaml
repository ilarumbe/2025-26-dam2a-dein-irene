<Window x:Class="WPF_BBDD_Juego.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Usuarios" Height="680" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">

        <StackPanel>
            <TextBlock Text="Nombre:"/>
            <TextBox x:Name="txtNombre" Margin="0,5"/>
            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" Margin="0,5"/>
            <Button Content="Guardar" Width="100" Margin="0,10" Click="BtnGuardar_Click"/>
            <DataGrid x:Name="dgUsuarios" AutoGenerateColumns="True" Height="500" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
