<Window x:Class="WPF_GestionFacturas.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Facturación" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Listado de Facturas" 
                       FontSize="20" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="0,0,20,0"/>

            <Button Content="🖨️ Imprimir Listado Global" 
                    Command="{Binding ImprimirCommand}"
                    Padding="10,5" Background="#007ACC" Foreground="White" FontWeight="Bold"/>

            <Button Content="📄 Imprimir Seleccionada" 
                    Command="{Binding ImprimirIndividualCommand}"
                    Margin="10,0,0,0"
                    Padding="10,5" Background="#28a745" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding ListaFacturas}"
                  SelectedItem="{Binding FacturaSeleccionada}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  BorderBrush="Gray" BorderThickness="1">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdFactura}" Width="50">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Número" Binding="{Binding NumeroFactura}" Width="100"/>

                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=\{0:d\}}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Cliente" Binding="{Binding NombreCliente}" Width="250"/>

                <DataGridTextColumn Header="Total" Binding="{Binding TotalFactura, StringFormat={}{0:N2} €}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Setter Property="Padding" Value="0,0,5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="2" Margin="0,5,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding TextoEstado}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>

</Window>